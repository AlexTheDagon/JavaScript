<section class="basic-grid">
    {{#each products}}
    <div class="card border-dark mb-3 " style="width: 18rem;">
        <img class="card-img-top" src="/img/product.png" alt="Card image cap">
        <div class="card-body">
            <h3 class="card-title">{{pname}}</h3>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">By: {{mname}}</li>
                <li class="list-group-item">Price: {{sell_price}}</li>
                <li class="list-group-item">Type: {{tname}}</li>
                <li class="list-group-item">Quantity: {{quantity}}</li>
            </ul>
        </div>
    </div>
    {{/each}}
</section>

